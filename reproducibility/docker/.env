# =============================================================================
# GpuFitsCrypt: Reproducibility Environment Configuration
# =============================================================================

# --- Library Paths ---
# In Docker, this is where the project is mounted. In local, scripts use PROJECT_ROOT.
BENCH_LIB_BASE_PATH=/app/src

# --- Benchmark Mode ---
BENCH_MODE=both

# --- GPU Configuration ---
NVIDIA_VISIBLE_DEVICES=0
NVIDIA_DRIVER_CAPABILITIES=compute,utility,graphics,video,display

# --- Input/Output Configuration (Relative to Project Root) ---
# These paths work for both Local and Docker (because Docker mounts root to /app/src)
BENCH_INPUT_FITS_DIR=./fits_input_files
BENCH_ENCRYPTED_DIR=./encrypted_files
BENCH_OUTPUT_CSV=./results/benchmark_results.csv

BENCH_MAX_FILES=100
BENCH_VERIFY_FILES=

# --- Benchmark Parameters ---
BENCH_CONFIG_MODE=full
BENCH_SHM_SIZE=4g

# Key Files (Relative to Project Root)
BENCH_KEY_H_FILE=./key_H.txt
BENCH_KEY_D_FILE=./key_D.txt

# Execution Parameters
BENCH_WARMUP_RUNS=5
BENCH_TIMED_RUNS=200
BENCH_C_LOG_LEVEL=0
